<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center"
            tools:context=".activity.LoginActivity">

            <TextView
                android:layout_margin="32dp"
                android:textSize="24sp"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="#000"
                android:fontFamily="@font/prodsansbold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorColor="#ddaa00"
                android:layout_marginBottom="32dp"
                app:helperText="Enter your Email address"
                app:labelText="Email Address" >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/email_address"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorColor="#ddaa00"
                android:layout_marginBottom="32dp"
                app:helperText="Enter your password"
                app:labelText="Password" >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spinning_bar_width="4dp"
                android:text="Login"
                android:textColor="#fff"
                android:textStyle="bold"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"  />

            <TextView
                android:layout_margin="32dp"
                android:textSize="18sp"
                android:id="@+id/signup_activity"
                android:text="Click here to Signup.."
                android:clickable="true"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/prodsansbold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>